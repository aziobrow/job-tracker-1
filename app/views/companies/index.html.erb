<h1>All Companies</h1>

<h3><%= button_to "Add a New Company", new_company_path %></h3>

<ul>
  <% @companies.each do |company| %>
  <li class=company_<%= company.id %>>
    <h3><%= link_to company.name, company_path(company) %>:</h3>
      <p class="link"><%= link_to "Edit", edit_company_path(company) %></p>
      <p class="link"><%= link_to "Delete", company_path(company), method: "delete" %></p>
      <p class="link"><%= link_to "Add a New Job for this Company", new_company_job_path(company) %></p>
  </li>
  <% end %>
</ul>
